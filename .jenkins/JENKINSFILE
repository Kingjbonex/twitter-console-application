pipeline {
    agent any
    environment {
        dotnet ='C:\\Program Files (x86)\\dotnet\\'
        }

    stages {        
        stage('Restore') { 
            steps {
                bat "dotnet restore"
            }
        }        
        stage('Build') { 
            steps {
                bat "dotnet build --no-restore"
            }
        }
        stage('Test') { 
            steps {
                bat "dotnet test"
            }
        }
        stage('Publish') { 
            steps {
                bat "dotnet publish TwitterCLI -c Release /p:PublishSingleFile=true --output Artifacts"
            }
        }
    }
}